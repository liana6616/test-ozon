{
  "name": "gulp-html-bemlinter",
  "description": "Gulp plugin for linting a bem html",
  "type": "module",
  "version": "3.0.1",
  "exports": "./lib/index.js",
  "files": [
    "./lib/**/*.js"
  ],
  "engines": {
    "node": "^18.12 || ^20.9"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "node-html-parser": "^6.1.11",
    "plugin-error": "^2.0.1",
    "through2": "^4.0.2"
  },
  "license": "ISC",
  "author": "firefoxic",
  "homepage": "https://github.com/firefoxic/gulp-html-bemlinter",
  "bugs": {
    "url": "https://github.com/firefoxic/gulp-html-bemlinter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:firefoxic/gulp-html-bemlinter.git"
  },
  "keywords": [
    "gulpplugin",
    "html",
    "bem",
    "linter"
  ],
  "devDependencies": {
    "editorconfig-checker": "^5.1.2",
    "eslint": "^8.55.0",
    "husky": "^8.0.3"
  },
  "scripts": {
    "lint:ec": "ec",
    "lint:es": "eslint . --ignore-path .gitignore",
    "lint": "pnpm /^lint:/",
    "test": "node --test",
    "pretest": "pnpm lint",
    "preversion": "pnpm test",
    "postversion": "pnpm publish"
  }
}